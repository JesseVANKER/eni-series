{% extends "layout.html.twig" %}

{% block title %}
    Liste des séries
{% endblock %}
{% block body %}

    <h1>Liste des séries</h1>

    <a href="{{ path('series_new') }}">Ajouter une série</a>
    <a href="{{ path('season_create') }}">Ajouter une saison</a>

<section class="series-list">

    {% for serie in series %}
        <article>
            <img src="{{ asset('uploads/posters/series/' ~  serie.poster ) }}" alt="{{ serie.name }}">
            <a href="{{ path('series_detail', {'id': serie.id}) }}">{{ serie.name }}</a>
            {{ serie.firstAirDate|date('d/m/Y') }}
        </article>
    {% endfor %}

</section>

{% endblock %}
