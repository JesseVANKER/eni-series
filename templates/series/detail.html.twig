{% extends 'layout.html.twig' %}

{% block title %}
    Details d'une série
{% endblock %}

{% block body %}
    <h1>{{ serie.name }}</h1>

<section class="series-list">
    <img src="{{ asset('uploads/posters/series/' ~  serie.poster ) }}" alt="{{ serie.name }}">
    <div>
        <h1>{{ serie.name }}</h1>
        <p>Popularity:      {{ serie.popularity }}</p>
        <p>Vote: {{ serie.vote }}</p>
        <p>{{ serie.overview }}</p>

        <h2>Liste des saisons :</h2>
        {% for season in serie.seasons %}
            <article>
                <h4>Saison n°{{ season.number }}</h4>
            </article>
        {% endfor %}
    </div>

</section>
{% endblock %}
